<UserControl x:Class="FlightSimulatorApp.Views.ThrottleSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel VerticalAlignment="Center" Margin="10">
        <Slider x:Name="MySlider" Background="Navy" Minimum="0" Maximum="1" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="MySlider_ValueChanged" />
        <TextBlock x:Name = "TheValue" HorizontalAlignment="Center" Text = "Throttle: 0" FontSize="25" />
    </StackPanel>
</UserControl>
